
<% include partials/header %>
<link rel="stylesheet" href="/stylesheets/list.css">

  <div style='text-align: center;'>
    <% if(place){ %>
      <h1 class='cityList hidden-xs'>Bars in <%= place.charAt(0).toUpperCase() + place.slice(1) %></h1>
    <% }  %>
  </div>
  <div class="container">
    <div class="flex-container">
      <% for(var i = 0; i < 12; i++){ %>
          <div class="flex-item">
            <h1>
              <a href=<%= data.businesses[i].url %>><%= data.businesses[i].name %></a>
            </h1>
            <img src=<%= data.businesses[i].image_url %> alt=<%data.businesses[i].name %>>
            <h5><%= data.businesses[i].location.address %></h5>
            <h4><%= data.businesses[i].phone %></h4>
            <p> "<%= data.businesses[i].snippet_text %>"</p>
            <div class="form-group">
              <button class='attendance'><%= data.businesses[i].whosGoing.length %> Attending</button>
            </div>

              <% if(currentUser && data.businesses[i].whosGoing.indexOf(currentUser.id) === -1){ %>

                <form  method='post' action='/bars/<%= data.businesses[i].location.city %>/<%= data.businesses[i].id %>' >
                  <div class="form-group">
                    <button class='userAttendance' type='submit'>Wanna Go? <i class=''></i></button>
                  </div>
                </form>
               <%  } else if (currentUser){  %>
                <form  method='post' action='/bars/<%= data.businesses[i].location.city %>/<%= data.businesses[i].id %>?_method=DELETE' >
                  <button class='btn btn-danger'type='submit'>Cancel <span class='glyphicon glyphicon-remove'></span></button>
                </form>
              <%  } %>

            <!-- <button class="attendance" type="submit" name="button">Attending?</button>
            <button class="userAttendance" type="submit" name="button">Attending</button> -->
          </div>
      <%} %>
      </div>
</div>


<div class="form-group">
  <button class="btn btn-lg btn-primary btn-block">Login</button>
</div>


<% include partials/footer %>
